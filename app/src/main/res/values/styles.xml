<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextMain">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/basic_16dp</item>
        <item name="android:paddingBottom">@dimen/basic_16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonBack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="iconTint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="SwitchStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="SettingTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SearchButtonStyle">
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:backgroundTint">@color/yp_light_gray</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="TrackPrimary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NotFoundImg">
        <item name="android:src">@drawable/not_found_placeholder_light</item>
    </style>
    <style name="NotConnectedImg">
        <item name="android:src">@drawable/not_connected_placeholder_light</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="BackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BackgroundTintStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="BackButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="MainText">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="AudioPlayerText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PlayButton">
        <item name="android:src">@drawable/play</item>
    </style>
    <style name="tabLayoutStyle">
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="bottomNavStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="itemIconTint">@drawable/nav_color_state</item>
        <item name="itemTextColor">@drawable/nav_color_state</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="bottomViewStyle">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="clearButtonStyle">
        <item name="tint">@color/yp_text_gray</item>
    </style>
    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/custom_title_text_style</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>
    <style name="custom_title_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="NewPlaylistButton">
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="ErrorText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NewPlaylist">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="BottomSheetBG">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="BottomSheetStroke">
        <item name="android:backgroundTint">@color/yp_text_gray</item>
    </style>
    <style name="BottomSheetErrorText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BottomSheetButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginTop">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleCurrentPlaylist">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarCurrentPlaylist" parent="SearchButtonStyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/arrow_left</item>
        <item name="titleTextAppearance">@style/MainText</item>
    </style>

    <style name="BottomSheetBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottomSheetLineStyle">
        <item name="android:backgroundTint">@color/yp_light_gray</item>
    </style>

    <style name="NoTracksInPlaylist">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackArtist">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>
</resources>
