<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextMain">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/basic_16dp</item>
        <item name="android:paddingBottom">@dimen/basic_16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonBack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="iconTint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="SwitchStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:thumbTint">@color/yp_text_gray</item>
        <item name="android:trackTint">@color/yp_light_gray</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="SettingTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SearchButtonStyle">
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:backgroundTint">@color/yp_light_gray</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="TrackPrimary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NotFoundImg">
        <item name="android:src">@drawable/not_found_placeholder_light</item>
    </style>
    <style name="NotConnectedImg">
        <item name="android:src">@drawable/not_connected_placeholder_light</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="PlayerStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BackButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="MainText">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>
    <style name="AudioPlayerText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PlayButton">
        <item name="android:src">@drawable/play</item>
    </style>
</resources>