<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <Button
        android:id="@+id/button_back"
        style="@style/ButtonBack"
        android:text="@string/settings"
        app:drawableLeftCompat="@drawable/arrow_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/text_24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:fontFamily="@font/ys_display_medium"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Switch
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="26dp"
            android:thumbTint="#AEAFB4"
            android:trackTint="#E6E8EB"
            android:layout_gravity="end"/>
    </LinearLayout>

    <Button
        style="@style/ButtonSettings"
        android:text="@string/share"
        app:drawableRightCompat = "@drawable/toshare" />
    <Button
        style="@style/ButtonSettings"
        android:text="@string/support"
        app:drawableRightCompat = "@drawable/support" />
    <Button
        style="@style/ButtonSettings"
        android:text="@string/agreement"
        app:drawableRightCompat = "@drawable/agreement"/>
</LinearLayout>