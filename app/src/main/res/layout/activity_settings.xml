<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondary">
    <Button
        android:id="@+id/button_back"
        style="@style/ButtonBack"
        android:text="@string/settings"
        app:drawableLeftCompat="@drawable/arrow_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/basic_16dp"
        android:paddingBottom="@dimen/basic_16dp"
        android:paddingLeft="@dimen/text_24dp">

        <TextView
            style="@style/SettingTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:fontFamily="@font/ys_display_medium"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Switch
            style="@style/SwitchStyle"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <Button
        android:id="@+id/share_button"
        style="@style/ButtonSettings"
        android:text="@string/share"
        app:drawableRightCompat = "@drawable/toshare" />
    <Button
        android:id="@+id/support_button"
        style="@style/ButtonSettings"
        android:text="@string/support"
        app:drawableRightCompat = "@drawable/support" />
    <Button
        android:id="@+id/agree_button"
        style="@style/ButtonSettings"
        android:text="@string/agreement"
        app:drawableRightCompat = "@drawable/agreement"/>
</LinearLayout>